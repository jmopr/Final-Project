<div class="col-md-10 text">
  <h1>Salary Data for Miami-Dade County Government Departments</h1>
  <h5>Select a department</h5>
</div>
<div class="col-md-4">
  <%= form_tag '/departments/:id', method: :get, id: 'dept' do %>
    <%= select_tag "department", options_from_collection_for_select(@departments, "id", "name", :selected => params[:id]) %>
    <%= select_tag "year", options_for_select((2012..2016).to_a.reverse.map{|y| [y,y]}, :selected => params[:year]) %>
    <%= submit_tag 'Search', class: 'btn btn-primary', id: "search_button" %>
  <% end %>
  <button type="button" class="btn btn-primary">
    <%= link_to 'Back', employees_home_path %>
  </button>
  <button type="button" class="btn btn-primary">
    <%= link_to 'Salary Information for the County', employees_index_path %>
  </button>
</div>

</div>
<div class="background_image">
  <%=image_tag("miami_aerial", height: '375px',width: '100%', id: "miami_aerial")%>
</div>
