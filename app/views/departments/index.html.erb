<div class="col-md-10 text" style="width: 100%; text-align: center;">
  <h1>Salary Data for Miami-Dade County Government Departments</h1>
  <h5>Select a department</h5>
</div>
<div class="col-md-3" style="width:100%; display:flex; justify-content:center; text-align:center;">
  <%= form_tag '/departments/:id', method: :get, id: 'dept' do %>
    <%= select_tag "department", options_from_collection_for_select(@departments, "id", "name", :selected => params[:id]), class:"form-control" %>
    <br>
    <%= select_tag "year", options_for_select((2012..2016).to_a.reverse.map{|y| [y,y]}, :selected => params[:year]), class:"form-control" %>
    <br>
    <%= submit_tag 'Search', class: 'btn btn-primary', id: "search_button" %>
  <% end %>
</div>
<div class="col-md-3">
  <button type="backbutton" class="btn btn-primary">
    <%= link_to 'Back', employees_home_path %>
  </button>
</div>
<div style="float:right">
  <button type="generalbutton" class="btn btn-primary">
    <%= link_to 'General Salary Information for the County', employees_index_path %>
  </button>
</div>
<div class="background_image">
  <%=image_tag("miami_aerial", height: '340px',width: '100%', id: "miami_aerial")%>
</div>
